import random

# Функція для виводу сюжету та інструкцій гри
def introduction():
    print("Ласкаво просимо в гру 'Пригоди в таємничому лісі'!")
    print("Ти втрапив в невідомий ліс і повинен знайти шлях назад до цивілізації.")
    print("Тобі потрібно приймати рішення, які впливатимуть на твій виживання.")
    print("Обери номер відповіді з підказок, щоб продовжити гру.")
    print("Гра складається з 100 рядків коду, але це базовий приклад.")

# Головна функція гри
def main_game():
    score = 0  # Початковий рахунок гравця
    
    while score < 10:  # Гра триває до досягнення рахунку 10
        print("\nТи продовжуєш свою подорож в лісі.")
        print("Обери дію:")
        print("1. Піти наліво")
        print("2. Піти направо")
        print("3. Подивитися навколо себе")

        choice = input("Обери номер відповіді: ")

        if choice == "1":
            print("\nТи виявив гриби і знайшов їжу. Твій рахунок зросла на 2.")
            score += 2
        elif choice == "2":
            print("\nТи натрапив на ведмедя! Ти втратив 3 бали зі свого рахунку.")
            score -= 3
        elif choice == "3":
            print("\nТи бачиш річку та човен. Чи хочеш ти переправитися через річку?")
            print("1. Так")
            print("2. Ні")
            river_choice = input("Обери номер відповіді: ")
            if river_choice == "1":
                print("\nТи безпечно переправився через річку. За це отримуєш 5 балів.")
                score += 5
            else:
                print("\nТи вирішив не ризикувати і продовжити свій шлях по лісу.")

        # Перевірка правильності введення
        if choice not in ["1", "2", "3"]:
            print("Введено невірний номер відповіді. Спробуй ще раз.")

        # Виведення поточного рахунку
        print(f"Твій поточний рахунок: {score}")

    # Визначення фіналу гри
    if score >= 10:
        print("\nТи знайшов вихід з лісу і вижив! Ти переміг!")
    else:
        print("\nТи не зміг вижити в лісі і програв гру.")

if __name__ == "__main__":
    introduction()
    main_game()
